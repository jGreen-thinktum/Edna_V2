<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">


    <TextView
        android:id="@+id/textviewVendingNameOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="660dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewVendingNameOrder">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menuHolderOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewItem1Order"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nachos"
                app:layout_constraintBottom_toBottomOf="@+id/guideline7"
                app:layout_constraintEnd_toStartOf="@+id/textviewItem1DescOrder"
                app:layout_constraintStart_toStartOf="@+id/menuHolderOrder"
                app:layout_constraintTop_toTopOf="@+id/menuHolderOrder" />

            <TextView
                android:id="@+id/textviewItem1Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Coffee"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toEndOf="@+id/imageViewItem1Order"
                app:layout_constraintTop_toTopOf="@+id/menuHolderOrder" />

            <TextView
                android:id="@+id/textviewItem1DescOrder"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="3.99"
                app:layout_constraintBottom_toBottomOf="@+id/guideline7"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toEndOf="@+id/imageViewItem1Order"
                app:layout_constraintTop_toBottomOf="@+id/textviewItem1Order" />


            <TextView
                android:id="@+id/textviewItem1QuantOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                app:layout_constraintBottom_toTopOf="@+id/textviewItem1QuantNumOrder"
                app:layout_constraintEnd_toEndOf="@id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/menuHolderOrder" />

            <TextView
                android:id="@+id/textviewItem1QuantNumOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/guideline7"
                app:layout_constraintEnd_toEndOf="@id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/textviewItem1QuantOrder" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="236dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="324dp" />

            <Button
                android:id="@+id/btnItem1Add"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="@+id/menuHolderOrder"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/menuHolderOrder" />

            <Button
                android:id="@+id/btnItem1Subtract"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="@+id/guideline7"
                app:layout_constraintEnd_toEndOf="@+id/menuHolderOrder"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/btnItem1Add" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="100dp" />


            <ImageView
                android:id="@+id/imageViewItem2Order"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nachos"
                app:layout_constraintBottom_toBottomOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/textviewItem2DescOrder"
                app:layout_constraintStart_toStartOf="@+id/menuHolderOrder"
                app:layout_constraintTop_toTopOf="@+id/guideline7" />

            <TextView
                android:id="@+id/textviewItem2Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Coffee"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toEndOf="@+id/imageViewItem2Order"
                app:layout_constraintTop_toTopOf="@+id/guideline7" />

            <TextView
                android:id="@+id/textviewItem2DescOrder"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Get yourself a nice black coffee"
                app:layout_constraintBottom_toBottomOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toEndOf="@+id/imageViewItem2Order"
                app:layout_constraintTop_toBottomOf="@+id/textviewItem2Order" />


            <TextView
                android:id="@+id/textviewItem2QuantOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                app:layout_constraintBottom_toTopOf="@+id/textviewItem2QuantNumOrder"
                app:layout_constraintEnd_toEndOf="@id/guideline6"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/guideline7" />

            <TextView
                android:id="@+id/textviewItem2QuantNumOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/guideline8"
                app:layout_constraintEnd_toEndOf="@id/guideline6"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/textviewItem2QuantOrder" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="236dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="324dp" />

            <Button
                android:id="@+id/btnItem2Add"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="@+id/menuHolderOrder"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/guideline7" />

            <Button
                android:id="@+id/btnItem2Subtract"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="@+id/guideline8"
                app:layout_constraintEnd_toEndOf="@+id/menuHolderOrder"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toBottomOf="@+id/btnItem2Add" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="200dp" />


            <ImageView
                android:id="@+id/imageViewItem3Order"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nachos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textviewItem3DescOrder"
                app:layout_constraintStart_toStartOf="@+id/menuHolderOrder"
                app:layout_constraintTop_toTopOf="@+id/guideline8" />

            <TextView
                android:id="@+id/textviewItem3Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Coffee"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toEndOf="@+id/imageViewItem3Order"
                app:layout_constraintTop_toTopOf="@+id/guideline8" />

            <TextView
                android:id="@+id/textviewItem3DescOrder"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Get yourself a nice black coffee"
                app:layout_constraintBottom_toBottomOf="@+id/menuHolderOrder"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toEndOf="@+id/imageViewItem3Order"
                app:layout_constraintTop_toBottomOf="@+id/textviewItem3Order" />


            <TextView
                android:id="@+id/textviewItem3QuantOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                app:layout_constraintBottom_toTopOf="@+id/textviewItem3QuantNumOrder"
                app:layout_constraintEnd_toEndOf="@id/guideline6"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/guideline8" />

            <TextView
                android:id="@+id/textviewItem3QuantNumOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/menuHolderOrder"
                app:layout_constraintEnd_toEndOf="@id/guideline6"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/textviewItem3QuantOrder" />

            <Button
                android:id="@+id/btnItem3Add"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="@+id/menuHolderOrder"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/guideline8" />

            <Button
                android:id="@+id/btnItem3Subtract"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/menuHolderOrder"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toBottomOf="@+id/btnItem3Add" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnSubmitOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuList"
        android:layout_width="409dp"
        android:layout_height="660dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewVendingNameOrder"
        tools:listitem="@layout/layout_menu_item"/> -->

</androidx.constraintlayout.widget.ConstraintLayout>